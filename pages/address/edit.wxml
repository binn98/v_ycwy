<!--pages/address/edit.wxml-->
<view class="ycwy-container">
  <view class="form">
    <view class="label flex flex_cc">
      <view class="ico"></view>请认真填写您的寄件地址
    </view>
    <view class="wrap">
      <view class="block">
        <wux-input label="姓名" value="{{ form.link_name }}" data-name="link_name" placeholder="请填写寄件人姓名" controlled error="{{ vaild.link_name }}" type="text" bind:change="formChange" bind:blur="formChange" bind:clear="formClear" bind:error="formError" />
      </view>
      <wux-divider show-text="{{ false }}" />
      <view class="block">
        <wux-input label="手机号" value="{{ form.mobile }}" data-name="mobile" placeholder="请输入手机号" maxlength="11" controlled error="{{ vaild.mobile }}" type="number" bind:change="formChange" bind:blur="formChange" bind:clear="formClear" bind:error="formError" />
      </view>
      <wux-divider show-text="{{ false }}" />
      <view class="flex flex_mj" bindtap="cityOpen">
        <view class="tal">所在城市/区域</view>
        <view class="tar {{ city.value ? '':'light' }}">{{ city.value ? city.value:'请选择所在地区' }} <text class="iconfont icon-jiantou-right"></text></view>
      </view>
      <wux-divider show-text="{{ false }}" />
      <view class="block">
        <wux-input label="详细地址" value="{{ form.address }}" data-name="address" placeholder="请填写街道、门牌号等" controlled error="{{ vaild.address }}" type="text" bind:change="formChange" bind:blur="formChange" bind:clear="formClear" bind:error="formError" />
      </view>
      <wux-divider show-text="{{ false }}" />
      <view class="flex flex_mj" bindtap="radioChange">
        <view class="tal">设为默认地址</view>
        <view class="tar">
          <wux-selectable value="2" type="defult" checked="{{ form.is_default == 2 }}" controlled>
            <text class="iconfont icon-dagou-" slot="icon-on" style="color: #E3805B; font-size: 40rpx;"></text>
            <view class="iconfont icon-dagou-" slot="icon-off"  style="color: #999999; font-size: 40rpx;"></view>
          </wux-selectable>
        </view>
      </view>
    </view>
  </view>

  <button class="btn btn_text {{ !btn && 'disabled' }}" bindtap="subAddress">{{ id ? '确认修改' : '确认添加' }}</button>

  <wux-cascader visible="{{ city.visible }}" defult-value="{{ city.value }}" title="所在地区" options="{{ city.options }}" bind:close="cityClose" bind:change="cityChange" />
</view>