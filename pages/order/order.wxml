<view class="ycwy-container">
  <image class="img" src="../../assets/img/oder_banner.png" mode="widthFix"></image>
  <!-- 寄件地址 -->
  <view class="address">
    <text>寄件地址</text>
    <view class="address_check" bindtap="goAddress">
      <view wx:if="{{show}}" class="content">
        <view class="info">
          <text class="info_user">{{userInfo.link_name}}</text>
          <text class="numbers">{{userInfo.mobile}}</text>  
        </view>
        <view class="user_address">
          <text>{{userInfo.address}}</text> 
        </view>  
      </view>
      <text wx:if="{{!show}}" class="address_chenked">请选择或新建地址</text>
      <text class="iconfont icon-jiantou-right"></text>
    </view>
  </view>
  <!-- 预约时间 -->
  <view class="time" >
    <text>预约时间</text>
    <view class="goods" >
      <text>物品信息</text><text>穿旧回收衣物</text>
    </view>
    <view class="now" >
      <text>预约时间</text><text class="{{day==''? 'red':'black'}}" bindtap="checkTime">{{day + now ||'请选择时间'}}<text class="iconfont icon-jiantou-right"></text></text>
    </view>
  </view>
  <!-- 常见问题 -->
  <view class="question" >
    <text>常见问题</text>
    <view class="common">
      <wux-accordion-group title="" label="" accordion="{{ true }}">
        <wux-accordion title="{{ (index + 1) + '、' + item.question }}" wx:for="{{ list }}" wx:key="id" wx:for-item="item" wx:for-index="index"><text style="color: #999999; font-size: 26rpx;" decode="{{ true }}">{{ item.answer }}</text></wux-accordion>
      </wux-accordion-group>
    </view>
  </view>
  <!-- 回收按钮 -->
  <view class="btn" bindtap="submitRecycle">
    预约回收
  </view>
  <wux-popup position="bottom" visible="{{ date.visible }}" bind:close="dateClose" bind:closed="popClosed" class="company">
    <view class="company-wrap">
      <view class="wrap_c">
        <!-- 选择上门日期 -->
        <view class="date">
          <view class="choose_date">
            <text>请选择上门日期</text><text class="tx2">左滑选择其他日期</text>
          </view>
          <view class="sc_x">
            <scroll-view class="scro_x" scroll-x="true">
              <view class="scro_ {{cur == item1.label? 'cur_x':''}}" wx:for="{{date.options}}" wx:for-item="item1" data-key="{{item1.label}}" wx:key="{{index}}" data-value="{{item1.value}}" bindtap="getdate" data-time="{{item1.children}}">
                {{item1.value}}<view class="{{ cur == item1.label? 'cur_x1':'scro_1'}}"data-key="{{item1.label}}" data-value="{{item1.value}}" bindtap="getdate" data-time="{{item1.children}}">{{item1.label}}</view>
              </view>
            </scroll-view>
          </view>
          
        </view>
        <!-- 选择上门时段 -->
        <view class="time">
          <view class="shangmen">
            <text class="now">请选择预约时间</text>
          </view>
          <view class="time_slot">
            <view wx:for="{{children}}" bindtap="selectTime" data-disabled="{{item2.disabled}}" data-label="{{item2.label}}" wx:for-item="item2" class="time_c {{now == item2.label? 'cur_x':''}} {{item2.disabled==true? 'color':''}}">
              {{item2.value}}
            </view>
          </view>
        </view>
        <view class="btn" bindtap="closePop">
            确定
        </view>
      </view>
    </view>

  </wux-popup>
</view>