.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background-color: black;
  opacity: .7;
  z-index: 20;
}
.btn{
  width: 640rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  z-index: 25;
  border-radius: 25rpx  ;
}
.blue{
  color: blue;
}
.btn .in_block{
  font-size: 34rpx;
  font-weight: bold;
  color: #181818;
  display: block;
  margin-top: 68rpx;
  margin-bottom: 55rpx;
  text-align: center;
}
.btn .in_block_{
  font-size: 36rpx;
  color: #666;
  display: block;
  text-align: center;
  padding-bottom: 61rpx;
  border-bottom: 1rpx solid #CCCCCC;
}
.btn .btn_{
  height: 110rpx;
  width: 100%;
}
.btn .btn_>text{
  display: inline-block;
  height: 100%;
  line-height: 110rpx;
  text-align: center;
  color: #181818;
  font-size: 36rpx;
  width: 50%;
  box-sizing: border-box;
}
.btn .btn_ .l{
  border-right: 1rpx solid #ccc;
  
}
.btn .btn_ .r{
  border-left: 1rpx solid #ccc;
